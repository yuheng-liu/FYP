<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_fragment"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <fragment
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:id="@+id/google_map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                map:mapType="normal"
                map:uiCompass="true"
                tools:ignore="MissingPrefix"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="60dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="30sp"
                    android:padding="10dp"
                    android:fontFamily="@font/rokkitt_medium"
                    android:layout_gravity="center"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/small_rounded_corner">

                <!--START of From-To layout-->
                <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/home_test_from"
                            android:clickable="true"
                            android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:textSize="16sp"
                            android:text="@string/trip_request_from"/>
                    </FrameLayout>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:id="@+id/home_swap_to_from"
                            android:clickable="true"
                            android:focusable="true">

                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_swap_vert_black_24dp"
                                android:padding="4dp"/>
                    </FrameLayout>

                    <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|top"
                                android:textSize="16sp"
                                android:text="@string/trip_request_to"/>
                    </FrameLayout>
                </LinearLayout>
                <!--END of From-To layout-->


                <!--START of destination selection layout 1-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/home_location_selection_grid_to_platform"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:animateLayoutChanges="true">

                    <FrameLayout
                            android:id="@+id/home_custom_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/rounded_corner">

                            <fragment
                                    android:id="@+id/autocomplete_fragment"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            />

                        </android.support.v7.widget.CardView>
                    </FrameLayout>

                    <LinearLayout
                            android:id="@+id/home_train_coach_seat_location"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/home_train_field"
                                android:background="@null"
                                android:textAlignment="center"
                                android:hint="@string/home_train_number"/>

                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/home_coach_field"
                                android:background="@null"
                                android:textAlignment="center"
                                android:hint="@string/home_coach_number"/>

                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:id="@+id/home_seat_field"
                                android:background="@null"
                                android:textAlignment="center"
                                android:hint="@string/home_seat_number"/>
                    </LinearLayout>
                </LinearLayout>
                <!--END of destination selection layout 1-->

                <!--START of destination selection layout 2-->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/home_location_selection_grid_from_platform"
                        android:orientation="vertical"
                        android:visibility="gone">

                    <LinearLayout
                            android:id="@+id/home_train_coach_seat_location_from"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:textAlignment="center"
                                android:text="Train No"/>

                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:textAlignment="center"
                                android:text="Coach No"/>

                        <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:textAlignment="center"
                                android:text="Seat No"/>
                    </LinearLayout>

                    <FrameLayout
                            android:id="@+id/home_custom_location_to"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                        <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/rounded_corner">

                            <fragment
                                    android:id="@+id/autocomplete_fragment_to"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            />

                        </android.support.v7.widget.CardView>
                    </FrameLayout>
                </LinearLayout>
                <!--END of destination selection layout 2-->

            </LinearLayout>
        </LinearLayout>

        <Button
                android:layout_width="200dp"
                android:layout_height="46dp"
                android:layout_marginBottom="60dp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/rounded_corner_accent"
                android:id="@+id/stations_spinner_next"
                android:text="@string/next"
                android:textColor="@color/colorPrimary"/>

    </FrameLayout>

</LinearLayout>
