<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_fragment"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/page_title_porter"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"/>

    <FrameLayout
            android:layout_width="335dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_corner">

        <android.support.v7.widget.AppCompatSpinner
                android:layout_width="300dp"
                android:layout_height="46dp"
                android:entries="@array/stations_array"
                android:prompt="@string/where_to"
                android:id="@+id/stations_spinner"
                android:layout_gravity="center">

        </android.support.v7.widget.AppCompatSpinner>
    </FrameLayout>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp">

        <Button
                android:layout_width="200dp"
                android:layout_height="46dp"
                android:id="@+id/stations_spinner_next"
                android:background="@drawable/rounded_corner_accent"
                android:text="@string/next"
                android:textColor="@color/colorPrimary"/>
    </FrameLayout>
</LinearLayout>
