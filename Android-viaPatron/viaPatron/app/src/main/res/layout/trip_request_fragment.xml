<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="@string/app_name"
            android:textSize="@dimen/text_page_header_title"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_request_station_title"
            android:text="@string/trip_request_main_title"
            android:textSize="20sp"
            android:paddingTop="@dimen/trip_request_station_title_padding_top"
            android:paddingBottom="@dimen/trip_request_station_title_padding_bottom"
            android:layout_gravity="center"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trip_request_date_title"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_accent_small"/>


    <FrameLayout
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="@dimen/trip_request_field_between_margin"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_white_small">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/trip_request_from"
                android:textSize="12sp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:id="@+id/from_request_field"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="@dimen/trip_request_field_text_size"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"/>

    </FrameLayout>

    <FrameLayout
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="@dimen/trip_request_field_between_margin"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_white_small">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/trip_request_to"
                android:textSize="12sp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:id="@+id/to_request_field"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textSize="@dimen/trip_request_field_text_size"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"/>

    </FrameLayout>

    <FrameLayout
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="@dimen/trip_request_field_between_margin"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_white_small">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/trip_request_luggages"
                android:textSize="12sp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:id="@+id/luggages_request_field"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:textSize="@dimen/trip_request_field_text_size"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:layout_marginTop="@dimen/trip_request_field_between_margin"
            android:layout_gravity="center"
            android:background="@drawable/rounded_corner_white_small">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/trip_request_luggage_weight"
                android:textSize="12sp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:id="@+id/luggage_weight_field"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textSize="@dimen/trip_request_field_text_size"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/trip_request_field_between_margin">

        <Button
                android:layout_width="260dp"
                android:layout_height="46dp"
                android:id="@+id/trip_request_next_button"
                android:background="@drawable/rounded_corner_accent"
                android:text="@string/next"
                android:textColor="@color/colorPrimary"/>
    </FrameLayout>
</LinearLayout>
