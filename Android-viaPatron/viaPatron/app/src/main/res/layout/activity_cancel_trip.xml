<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CancelTrip" android:id="@+id/trip_confirmed" android:minWidth="1480dp"
        android:maxWidth="1480dp" android:minHeight="2040dp" android:maxHeight="2040dp">

    <Button
            android:text="@string/trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/trip"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="12sp" android:textColor="@android:color/holo_blue_dark"
            tools:targetApi="ice_cream_sandwich"/>
    <Button
            android:text="@string/chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/cancel_button" android:id="@+id/chats"
            app:layout_constraintStart_toStartOf="@+id/cancel_button"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/cancel_button"
            app:layout_constraintVertical_bias="1.0" android:textAppearance="@android:style/TextAppearance"
            android:textSize="12sp" android:textColor="@android:color/black"/>
    <Button
            android:text="@string/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/trip" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/trip_confirmed"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/trip_in_progress"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="14sp" android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="center"/>
    <TextView
            android:text="@string/your_porter_is_on_the_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/your_porter_has_arrived" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trip_in_progress"
            android:background="@android:color/holo_blue_dark"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/white" android:textAlignment="center"
            tools:targetApi="ice_cream_sandwich"/>
    <TextView
            android:text="@string/chandra"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/chandra3"
            app:layout_constraintStart_toStartOf="@+id/your_porter_has_arrived"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/your_porter_has_arrived"
            android:background="@android:color/holo_blue_dark"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/white" android:textAlignment="viewEnd"
            app:layout_constraintHorizontal_bias="0.0" tools:targetApi="ice_cream_sandwich"/>
    <TextView
            android:text="@string/comma"
            android:layout_width="4dp"
            android:layout_height="29dp"
            android:id="@+id/comma" app:layout_constraintStart_toEndOf="@+id/chandra3"
            app:layout_constraintTop_toBottomOf="@+id/your_porter_has_arrived"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/white" android:background="@android:color/holo_blue_dark"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" tools:targetApi="ice_cream_sandwich"/>
    <TextView
            android:text="@string/four_point_nine"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:id="@+id/four_point_nine" app:layout_constraintStart_toEndOf="@+id/comma"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="@+id/your_porter_has_arrived"
            app:layout_constraintTop_toBottomOf="@+id/your_porter_has_arrived"
            android:background="@android:color/holo_blue_dark" android:textAppearance="@android:style/TextAppearance"
            android:textSize="12sp" android:textColor="@android:color/white"
            android:textAlignment="viewStart" tools:targetApi="ice_cream_sandwich"/>
    <TextView
            android:text="@string/space"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/leftspace" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/your_porter_has_arrived"
            app:layout_constraintTop_toTopOf="@+id/your_porter_has_arrived"
            android:background="@android:color/holo_blue_dark" tools:targetApi="ice_cream_sandwich"/>
    <TextView
            android:text="@string/space"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/rightspace" app:layout_constraintStart_toEndOf="@+id/your_porter_has_arrived"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/your_porter_has_arrived"
            android:background="@android:color/holo_blue_dark" tools:targetApi="ice_cream_sandwich"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="27dp" app:srcCompat="@android:drawable/btn_star"
            android:id="@+id/star"
            android:background="@android:color/transparent" app:layout_constraintStart_toEndOf="@+id/comma"
            app:layout_constraintTop_toBottomOf="@+id/your_porter_has_arrived"
            android:layout_marginStart="16dp" android:contentDescription="@string/star" tools:targetApi="donut"/>
    <ImageButton
            android:layout_width="44dp"
            android:layout_height="43dp" app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/photo"
            app:layout_constraintEnd_toStartOf="@+id/your_porter_has_arrived"
            app:layout_constraintBottom_toBottomOf="@+id/chandra3"
            app:layout_constraintTop_toTopOf="@id/your_porter_has_arrived"
            android:visibility="visible" android:contentDescription="@string/photo" tools:targetApi="donut"/>
    <Button
            android:text="@string/confirm"
            android:layout_width="163dp"
            android:layout_height="22dp" android:id="@+id/confirm"
            android:textAppearance="@android:style/TextAppearance" android:textSize="14sp"
            android:textColor="@android:color/white" android:background="@android:color/holo_blue_dark"
            app:layout_constraintBottom_toTopOf="@+id/cancel_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="goToPorterMainScreenFromCancelTripScreenViaConfirmButton"
            app:layout_constraintTop_toBottomOf="@+id/cancel_trip"
            app:layout_constraintVertical_bias="1.0" android:layout_marginBottom="4dp"
            tools:targetApi="ice_cream_sandwich"/>
    <Button
            android:text="@string/cancel"
            android:layout_width="163dp"
            android:layout_height="22dp"
            android:id="@+id/cancel_button"
            android:textAppearance="@android:style/TextAppearance" android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light" android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/trip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="goToTripConfirmedScreenFromCancelTripScreenViaCancelButton"
            tools:targetApi="ice_cream_sandwich"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="187dp" app:srcCompat="@drawable/trip_confirmed_image"
            android:id="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/helper"
            android:contentDescription="@string/photo" app:layout_constraintBottom_toTopOf="@+id/leftspace"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"
            tools:targetApi="donut"/>
    <TextView
            android:text="@string/space"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/helper"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@android:style/TextAppearance" android:textSize="14sp"
            android:textColor="@android:color/transparent"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/rightspace"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftspace" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_trip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/cancel_trip" android:textAppearance="@android:style/TextAppearance"
            android:textSize="14sp" android:textStyle="bold" android:lineSpacingExtra="12sp"
            android:textColor="@android:color/black" android:textAlignment="center"
            android:background="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/trip_want" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="4dp"/>
    <TextView
            android:text="@string/trip_has_already_started_are_you_sure_you_want"
            android:layout_width="320dp"
            android:layout_height="19dp"
            android:id="@+id/trip_want" app:layout_constraintStart_toStartOf="@+id/cancel_trip"
            app:layout_constraintEnd_toEndOf="@+id/cancel_trip"
            app:layout_constraintBottom_toTopOf="@+id/to_cancel"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/black" android:textAlignment="center"
    />
    <TextView
            android:text="@string/to_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_cancel" app:layout_constraintStart_toStartOf="@+id/chats"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="@+id/chats"
            app:layout_constraintBottom_toTopOf="@+id/note_been"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/black" android:textAlignment="center" android:layout_marginBottom="4dp"/>
    <TextView
            android:text="@string/note_cancelling_a_trip_after_it_has_been"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/note_been" app:layout_constraintStart_toEndOf="@+id/cancel_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/cancel_button"
            app:layout_constraintBottom_toTopOf="@+id/confirmed_low_priority"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/holo_red_light" android:textAlignment="viewStart"
            tools:targetApi="ice_cream_sandwich"/>
    <TextView
            android:text="@string/confirmed_will_place_you_in_low_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/confirmed_low_priority"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/confirm"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/holo_red_light" android:textAlignment="viewStart"
            android:layout_marginBottom="4dp" tools:targetApi="ice_cream_sandwich"/>

</android.support.constraint.ConstraintLayout>