<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/login_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="60sp"
                android:fontFamily="@font/rokkitt_regular"
                android:layout_marginTop="4dp"/>

        <EditText
                android:id="@+id/login_phone_number_field"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/sign_in_phone_hint"
                android:inputType="phone"
                android:textAlignment="center"
                android:background="@drawable/rounded_corner_black_border" />

        <EditText
                android:id="@+id/login_verification_code_field"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="8dp"
                android:hint="@string/verification_code"
                android:visibility="invisible"
                android:inputType="number"
                android:background="@drawable/rounded_corner_black_border" />

        <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="40dp"
                android:text="@string/verification_code_hint"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rounded_corner_black" />

    </LinearLayout>
</LinearLayout>