<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/login_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/splash"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="6">

        <TextView
                android:id="@+id/login_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="top"
                android:text="@string/app_name"
                android:textSize="30sp"
                android:layout_marginTop="4dp"/>

        <EditText
                android:id="@+id/login_phone_number_field"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/sign_in_phone_hint"
                android:inputType="phone"
                android:textAlignment="center"
                android:background="@drawable/rounded_corner" />

        <EditText
                android:id="@+id/login_verification_code_field"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:hint="@string/verification_code"
                android:visibility="invisible"
                android:inputType="number"
                android:background="@drawable/rounded_corner" />

        <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:text="@string/verification_code_hint"
                android:textColor="@color/colorWhite"
                android:background="@drawable/rounded_corner_black" />

        <TextView
                android:id="@+id/login_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:text="@string/forgot_password"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorAccent" />

        <TextView
                android:id="@+id/registration_button"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="@string/register_hint"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorAccent"
                android:backgroundTint="@color/colorAccent" />
    </LinearLayout>
</LinearLayout>