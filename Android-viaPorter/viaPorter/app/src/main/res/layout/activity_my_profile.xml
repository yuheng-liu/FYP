<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MyProfile" android:id="@+id/my_profile_screen" android:minWidth="1480dp"
        android:maxWidth="1480dp"
        android:minHeight="2048dp" android:maxHeight="2048dp" tools:ignore="UnusedIds">
    <TextView
            android:text="@string/my_profile"
            android:layout_width="0dp"
            android:layout_height="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/MyProfile"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:textAppearance="@android:style/TextAppearance"
            android:textColor="@android:color/black" android:textSize="24sp"/>
    <TextView
            android:text="@string/rajesh"
            android:layout_width="146dp"
            android:layout_height="40dp"
            android:id="@+id/Max" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MyProfile"
            android:textAppearance="@android:style/TextAppearance" android:textSize="24sp"
            android:textAlignment="viewStart"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/india"
            android:layout_width="146dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="@+id/Max" app:layout_constraintEnd_toEndOf="@+id/Max"
            android:id="@+id/india" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/Max"
            android:textAppearance="@android:style/TextAppearance" android:textSize="24sp"
            android:textColor="@android:color/darker_gray" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="viewStart"/>
    <TextView
            android:text="@string/rajesh80atgmail_com"
            android:layout_width="287dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="@+id/india"
            android:id="@+id/rajesh80ATgmail.com"
            app:layout_constraintBottom_toTopOf="parent" app:layout_constraintTop_toBottomOf="@+id/india"
            android:textAppearance="@android:style/TextAppearance" android:textSize="24sp"
            android:textColor="@android:color/darker_gray" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="viewStart"/>
    <TextView
            android:text="@string/language"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/language"
            android:textAppearance="@android:style/TextAppearance" android:textSize="24sp"
            android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="@+id/MyProfile"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/english"
            app:layout_constraintBottom_toTopOf="@+id/legaltender"
    />
    <TextView
            android:text="@string/reminders"
            android:layout_width="342dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="@+id/legaltender"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/reminders"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="24sp" android:textColor="@android:color/black"
            app:layout_constraintVertical_bias="0.53"/>
    <TextView
            android:text="@string/units"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/units" app:layout_constraintStart_toStartOf="@+id/reminders"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/imperial"
            app:layout_constraintTop_toBottomOf="@+id/reminders"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="24sp" android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/privacy_policy"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/privacy_policy" app:layout_constraintStart_toStartOf="@+id/units"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/privacy_policy_button"
            app:layout_constraintTop_toBottomOf="@+id/units"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="24sp" android:textColor="@android:color/black"/>

    <Button
            android:text="@string/sign_out"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:id="@+id/sign_out" app:layout_constraintStart_toStartOf="@+id/MyProfile"
            app:layout_constraintEnd_toEndOf="@+id/MyProfile"
            app:layout_constraintTop_toBottomOf="@+id/privacy_policy"
            style="@style/Widget.AppCompat.Button"
            android:textAppearance="@android:style/TextAppearance" android:textSize="14sp"
            android:textColor="@android:color/white"
            tools:targetApi="lollipop"
            app:layout_constraintBottom_toTopOf="@+id/viaPorter_text" app:layout_constraintVertical_bias="1.0"
            android:background="@drawable/rounded_corner_black_corrected"/>
    <TextView
            android:text="@string/currency"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:id="@+id/legaltender"
            android:textAppearance="@android:style/TextAppearance" android:textSize="24sp"
            android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="@+id/language"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toStartOf="@+id/usd"
            app:layout_constraintBottom_toTopOf="@+id/reminders"
    />
    <Button
            android:text="@string/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/viaPorter_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@android:style/TextAppearance" android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark" android:backgroundTint="@android:color/transparent"
            tools:targetApi="lollipop" style="@android:style/Widget.Button"
            android:background="@android:color/transparent" tools:ignore="UnusedIds"
            app:layout_constraintBottom_toTopOf="@+id/home" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="@string/english"
            android:layout_width="128dp"
            android:layout_height="80dp"
            android:id="@+id/english"
            app:layout_constraintEnd_toEndOf="@+id/usd"
            android:textAppearance="@android:style/TextAppearance" android:textSize="24sp"
            android:textColor="@android:color/darker_gray"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toStartOf="@+id/language_arrow"
            app:layout_constraintTop_toTopOf="@+id/language"/>
    <TextView
            android:text="@string/usd"
            android:layout_width="128dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="@+id/english" android:id="@+id/usd"
            app:layout_constraintTop_toTopOf="@+id/legaltender"
            app:layout_constraintBottom_toTopOf="@+id/sign_out" android:textAppearance="@android:style/TextAppearance"
            android:textColor="@android:color/darker_gray" app:layout_constraintVertical_bias="0.0"
            android:textAlignment="textEnd" android:textSize="24sp"/>
    <TextView
            android:text="@string/imperial"
            android:layout_width="128dp"
            android:layout_height="80dp"
            android:id="@+id/imperial"
            app:layout_constraintEnd_toEndOf="@+id/usd"
            app:layout_constraintTop_toTopOf="@+id/units"
            android:textAppearance="@android:style/TextAppearance" android:textSize="24sp"
            android:textColor="@android:color/darker_gray" android:textAlignment="textEnd"
    />
    <ImageButton
            android:layout_width="61dp"
            android:layout_height="34dp" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/language_arrow" app:layout_constraintStart_toStartOf="@+id/units_arrow"
            app:layout_constraintEnd_toEndOf="@+id/units_arrow"
            app:layout_constraintTop_toTopOf="@+id/english" app:layout_constraintBottom_toTopOf="@+id/language"
            app:layout_constraintVertical_bias="0.0" android:tint="@android:color/holo_blue_dark"
            android:visibility="visible" android:backgroundTint="@android:color/transparent"
            app:layout_constraintHorizontal_bias="0.0" android:background="@android:color/transparent"
            android:contentDescription="@string/language" tools:targetApi="lollipop"/>
    <ImageButton
            android:layout_width="61dp"
            android:layout_height="34dp" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/legal_tender_button"
            android:backgroundTint="@android:color/transparent" android:tint="@android:color/holo_blue_dark"
            app:layout_constraintStart_toStartOf="@+id/units_arrow" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/units_arrow"
            app:layout_constraintTop_toTopOf="@+id/usd"
            app:layout_constraintBottom_toTopOf="@+id/sign_out" app:layout_constraintVertical_bias="0.0"
            android:visibility="visible" android:contentDescription="@string/currency"
            tools:targetApi="lollipop" android:background="@android:color/transparent"/>
    <Switch
            android:layout_width="61dp"
            android:layout_height="34dp"
            android:id="@+id/reminders_button"
            app:layout_constraintTop_toTopOf="@+id/reminders"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/white"
            android:showText="false" android:textAlignment="viewEnd"
            android:splitTrack="false"
            android:contentDescription="@string/my_profile" tools:targetApi="lollipop"
            app:layout_constraintEnd_toEndOf="@+id/MyProfile"
            android:layout_marginEnd="12dp" app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:layout_width="61dp"
            android:layout_height="34dp" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/units_arrow"
            android:tint="@android:color/holo_blue_dark"
            android:backgroundTint="@android:color/white"
            android:contentDescription="@string/units" tools:targetApi="lollipop"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/imperial" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/imperial"/>
    <ImageButton
            android:layout_width="61dp"
            android:layout_height="34dp" app:srcCompat="@android:drawable/ic_media_play"
            android:id="@+id/privacy_policy_button"
            app:layout_constraintStart_toStartOf="@+id/units_arrow" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/privacy_policy"
            app:layout_constraintBottom_toTopOf="@+id/sign_out" android:visibility="visible"
            android:tint="@android:color/holo_blue_dark" android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/privacy_policy" tools:targetApi="lollipop"
            android:background="@android:color/transparent" app:layout_constraintVertical_bias="0.0"/>
    <ImageButton
            android:layout_width="124dp"
            android:layout_height="120dp" app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/imageButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/language" app:layout_constraintTop_toBottomOf="@+id/MyProfile"
            android:contentDescription="@string/my_profile"
            android:visibility="visible" tools:targetApi="donut" tools:ignore="UnusedIds"/>
    <Button
            android:text="@string/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/home"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="12sp" android:textColor="@android:color/black"
            tools:targetApi="ice_cream_sandwich"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="@string/chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chats"
            app:layout_constraintStart_toEndOf="@+id/jobs"
            app:layout_constraintTop_toTopOf="@+id/jobs"
            app:layout_constraintBottom_toBottomOf="@+id/jobs"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="12sp" android:textColor="@android:color/black"
            app:layout_constraintHorizontal_bias="0.7" android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/profile"/>
    <Button
            android:text="@string/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile"
            app:layout_constraintEnd_toEndOf="@+id/MyProfile"
            app:layout_constraintTop_toTopOf="@+id/chats"
            android:textAppearance="@android:style/TextAppearance" android:textSize="12sp"
            android:textColor="@android:color/holo_blue_dark"
            tools:targetApi="ice_cream_sandwich"
            app:layout_constraintBottom_toBottomOf="@+id/chats" android:textAlignment="center"
    />

    <Button
            android:text="@string/jobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jobs" app:layout_constraintStart_toEndOf="@+id/home"
            app:layout_constraintEnd_toStartOf="@+id/chats"
            app:layout_constraintBottom_toBottomOf="@+id/home" app:layout_constraintTop_toTopOf="@+id/home"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="12sp" android:textColor="@android:color/black" android:textAlignment="center"
            tools:targetApi="donut"/>
</android.support.constraint.ConstraintLayout>