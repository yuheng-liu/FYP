<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">

        <TextView
            android:id="@+id/login_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="top"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:layout_marginTop="4dp"/>

        <EditText
            android:id="@+id/login_phone_number_field"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="@string/phone_title_text"
            android:inputType="phone"
            android:background="@drawable/rounded_corner" />

        <EditText
            android:id="@+id/login_verification_code_field"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:hint="@string/hint_verification_code"
            android:visibility="invisible"
            android:inputType="number"
            android:background="@drawable/rounded_corner" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:text="@string/login_send_verification_code"
            android:background="@drawable/rounded_corner_accent" />

        <TextView
            android:id="@+id/login_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:text="@string/forgot_password"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorAccent" />

        <TextView
            android:id="@+id/registration_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="@string/register_hint"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorAccent"
            android:backgroundTint="@color/colorAccent" />
    </LinearLayout>
</LinearLayout>
